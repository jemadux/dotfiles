#!/bin/bash

## This commands you can copy paste to your terminal but because I want 
## to make it faster I makde that script of course you can comment or not


## Disable asterisks when type sudo 
sudo mv /etc/sudoers.d/0pwfeedback /etc/sudoers.d/0pwfeedback.disabled


## Make flatpak apps have same cursor as all rest system plus 
#new users have flatpak cursor to be same as main machine 
mkdir -p $HOME/.local/share/icons/default
tee $HOME/.local/share/icons/default/index <<EOF
[icon theme]
Inherits=Bibata-Modern-Classic
EOF
sudo mkdir -p /etc/.skel/.local/share/icons/default
sudo tee /etc/skel/.local/share/icons/default/index <<EOF
[icon theme]
Inherits=Bibata-Modern-Classic
EOF

#Default Client for torrents 
gio mime x-scheme-handler/magnet org.qbittorrent.qBittorrent.desktop
